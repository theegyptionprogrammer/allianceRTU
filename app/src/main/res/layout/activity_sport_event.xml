<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_event"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/white" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_event_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="400dp"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/tv_event_description"
                    android:layout_width="400dp"
                    android:layout_height="200dp" />
            </ScrollView>
        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/btn_regstarion_event"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Регстраци команды"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Регстрация игрока"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_regstarion_event"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


    <TextView
        android:id="@+id/tv_sport_event_name"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="event name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_event" />

    <TextView
        android:id="@+id/tv_sport_event_vk_link"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/instasmall"
        android:drawableLeft="@drawable/instasmall"
        android:text="@string/ssc_alliance"
        app:layout_constraintStart_toEndOf="@+id/tv_sport_event_name"
        app:layout_constraintTop_toBottomOf="@+id/logo_event" />

    <TextView
        android:id="@+id/tv_sport_event_inst_link"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/vksmall"
        android:drawableLeft="@drawable/vksmall"
        android:text="@string/vk_com_ssc_alliance"
        app:layout_constraintStart_toEndOf="@+id/tv_sport_event_vk_link"
        app:layout_constraintTop_toBottomOf="@+id/logo_event" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/sport_club_nav_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintTop_toBottomOf="@+id/btn_regstarion_event"
        app:menu="@menu/sport_club_menu"
        tools:layout_editor_absoluteX="-54dp" />


    <fragment
        android:id="@+id/sport_event_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        app:defaultNavHost="true"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_club_nav_view"
        app:navGraph="@navigation/sport_event_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>